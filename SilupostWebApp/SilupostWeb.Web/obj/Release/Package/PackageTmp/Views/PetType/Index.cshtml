@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Title -->
<h1 class="section-title" id="services"><span>@ViewBag.Page.Title</span></h1>
<!-- End Title -->
<!--breadcrum start-->
<ol class="breadcrumb text-left">
    <li>
        @ViewBag.Page.Module
    </li>
    @if (ViewBag.Page.ParentName != null)
    {
        <li><a href="@ViewBag.Page.ParentName">@ViewBag.Page.ParentTitle</a></li>
    }
    <li>
        @ViewBag.Page.Title
    </li>
</ol><!--breadcrum end-->
<div class="row ">
    <!-- table card code and example -->
    <div class="col-md-12">
        <div class="component-box">
            <!-- table card example -->
            <div class="pmd-card pmd-z-depth pmd-card-custom-view">
                <div class="pmd-card-title">
                    <h2 class="pmd-card-title-text">@ViewBag.Page.Title</h2>
                </div>
                <div class="pmd-card-body">
                    <div class="row">
                        <div class="col-xs-4">
                            <div id="selected-group"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            @Html.Partial("_Table")
                        </div>
                    </div>
                </div>
            </div>
            <!-- table card example end -->

        </div>
    </div>
    <!-- table card code and example end -->
    <div class="custom-floating-action">
        <button id="btnAdd" class="btn pmd-btn-fab pmd-btn-raised pmd-ripple-effect btn-danger">
            <i class="material-icons pmd-sm">add</i>
        </button>
    </div>
</div>
@Html.Partial("~/Views/Widget/_Modal.cshtml")

<div class="modal fade" id="modal-dialog-selectPetGroup" tabindex="-1" area-labelledby="modal-title" role="dialog" data-backdrop="static" data-keyboard="false" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @Html.Partial("~/Views/PetGroup/_Table.cshtml")
            </div>
            <div class="modal-footer">
                <button id="btnSelect" data-name="SELECT" class="btn btn-danger">SELECT</button>
                <button class="btn btn-default" data-dismiss="modal">CANCEL</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Scripts/Controller/PetType.js"></script>
    <script id="petGroup-template" type="text/x-jsrender">
        <form id="form-petGroup">
            <div class="group-fields clearfix row hidden">
                <div class="col-xs-4">
                    <label data-link="visible{:!IsNew}" class="form-group pure-material-textfield-outlined">
                        <input id="PetGroupId" disabled name="PetGroupId" data-link="PetGroupId" placeholder=" " />
                        <span>GroupId</span>
                    </label>
                </div>
            </div>
            <div class="group-fields clearfix row">
                <div class="col-xs-12">
                    <span id="btnChangeGroup" data-name="SELECT GROUP" class="btn btn-danger">SELECT GROUP</span>
                </div>
            </div>
            <div class="group-fields clearfix row">
                <div class="col-xs-12">
                    <label class="form-group pure-material-textfield-outlined">
                        <input id="Name" name="Name" data-link="Name" placeholder=" " readonly />
                        <span>Pet Group</span>
                    </label>
                </div>
            </div>
        </form>
    </script>

    <script id="petType-template" type="text/x-jsrender">
        <form id="form-petType">
            <div class="group-fields clearfix row">
                <div class="col-xs-4">
                    <label data-link="visible{:!IsNew}" class="form-group pure-material-textfield-outlined">
                        <input id="PetTypeId" disabled name="PetTypeId" data-link="PetTypeId" placeholder=" " />
                        <span>PetTypeId</span>
                    </label>
                </div>
            </div>
            <div class="group-fields clearfix row">
                <div class="col-xs-12">
                    <label class="form-group pure-material-textfield-outlined">
                        <input id="Name" name="Name" data-link="Name" placeholder=" " />
                        <span>Name</span>
                    </label>
                </div>
            </div>
            <div class="group-fields clearfix row">
                <div class="col-xs-12">
                    <label class="form-group pure-material-textfield-outlined">
                        <input id="PetGroup.Name" name="PetGroup.Name" data-link="PetGroup.Name" placeholder=" " disabled />
                        <span>Pet Group</span>
                    </label>
                </div>
            </div>
            <div class="group-fields clearfix row hidden">
                <div class="col-xs-12">
                    <label class="form-group pure-material-textfield-outlined">
                        <input id="PetGroupId" name="PetGroupId" data-link="PetGroupId" placeholder=" " />
                        <span>Pet Group</span>
                    </label>
                </div>
            </div>
            <div class="group-fields clearfix row">
                <div class="col-xs-12">
                    <label>Group Profile</label>
                    <div class="form-group pure-material-textfield-outlined">
                        <div class="row">
                            <div class="col-xs-3">
                                <img id='img-upload' for="ProfiePic" data-link="src{:ProfilePic.FileData}" style="width: 100px;height: 100px;display: block;" class="pmd-card pmd-z-depth pmd-card-custom-view" />
                            </div>
                        </div>
                        <br />
                        <label type="button" class="btn pmd-ripple-effect btn-danger" for="ProfiePic"> UPLOAD IMAGE </label>
                        <input type="file" class="hidden" id="ProfiePic" name="ProfiePic" data-link="ProfiePic">
                    </div>
                </div>
            </div>
        </form>
    </script>
    <script>
        petType.init();
    </script>
}