                {<a class="pmd-ripple-effect active" href="#"><i class="material-icons media-left pmd-xs md-dark">radio_button_checked</i><span class="media-body">Pet Type</span></a>}
                else
                {<a class="pmd-ripple-effect" href="/PetType"><i class="material-icons media-left pmd-xs md-light md-inactive">radio_button_unchecked</i> <span class="media-body">Pet Type</span></a>}
            </li>
            <li>
                @if (ViewBag.Page.MenuName.Equals("Pet Classification"))
                {<a class="pmd-ripple-effect active" href="#"><i class="material-icons media-left pmd-xs md-dark">radio_button_checked</i><span class="media-body">Pet Classification</span></a>}
